{
	"manifest_version": 2,
	"name": "驱疫员",
	"version": "0.0.1",
	"description": "微博 bot 浏览器插件",
	"author": "me",
	"icons": {
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://weibo.com/*"
			],
			"js": [
				"js/axios.js",
				"js/utils.js",
				"js/content-script.js"
			]
		}
	]
	
}